---
import Layout from '../../layouts/Layout.astro';
const posts = await Astro.glob('./*.md');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);
---

<Layout title="Blog - Ashuthosh Dubey">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-2">Blog</h1>
    <p class="text-gray-600 mb-8">Technical content, SEO insights, and developer guides</p>
    
    <div class="space-y-6">
      {sortedPosts.map(post => (
        <article class="border-b pb-6">
          <h2 class="text-xl font-semibold mb-2">
            <a href={post.url} class="hover:text-blue-600">
              {post.frontmatter.title}
            </a>
          </h2>
          <p class="text-gray-600 mb-2">{post.frontmatter.description}</p>
          <time class="text-sm text-gray-500">{post.frontmatter.date}</time>
        </article>
      ))}
    </div>
  </div>
</Layout>