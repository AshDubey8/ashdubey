---
import Layout from '../../layouts/Layout.astro';
const posts = await Astro.glob('./*.md');
const sortedPosts = posts.sort((a, b) => 
  new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);
---

<Layout title="Blog - Ashuthosh Dubey">
  <main class="animate-in">
    <header class="mb-8">
      <a href="/" class="text-sm text-gray-600 hover:text-gray-900 mb-4 inline-block">‚Üê Home</a>
      <h1 class="text-2xl font-bold">Blog</h1>
    </header>
    
    <div class="space-y-6">
      {sortedPosts.map(post => (
        <article>
          <a href={post.url} class="block group">
            <h2 class="font-medium group-hover:text-gray-600">{post.frontmatter.title}</h2>
            <p class="text-sm text-gray-600 mt-1">{post.frontmatter.description}</p>
            <time class="text-xs text-gray-500">{post.frontmatter.date}</time>
          </a>
        </article>
      ))}
    </div>
  </main>
</Layout>