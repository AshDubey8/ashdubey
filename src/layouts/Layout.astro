---
import '../styles/global.css';

export interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Ashuthosh Dubey - Content Marketing & SEO" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
</head>
<body class="bg-white text-gray-900 antialiased max-w-2xl mx-auto px-4 py-8 md:py-16">
  <slot />
</body>
</html>